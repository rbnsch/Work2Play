<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/rewardLayout">

    <Button
            android:layout_width="125dp"
            android:layout_height="75dp" android:id="@+id/deleteButton"
            android:text="Delete" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.422" android:backgroundTint="#e5e5e5"/>
    <Button
            android:text="Buy"
            android:layout_width="125dp"
            android:layout_height="75dp" android:id="@+id/buyButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="#fca311"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/deleteButton"/>
    <Button
            android:text="Dismiss"
            android:layout_width="125dp"
            android:layout_height="50dp" android:id="@+id/dismissButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.0"
            android:backgroundTint="#e5e5e5"
            app:layout_constraintTop_toBottomOf="@+id/buyButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>