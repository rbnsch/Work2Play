<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ShopActivity">
    <Button
            android:text="TASKS"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/tasksButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="#F44336" android:textSize="24sp"
            android:onClick="gotoTasks"/>
    <Button
            android:text="ADD REWARD"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/addRewardButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:background="#F44336"
            android:textSize="24sp" android:onClick="gotoAddReward"/>
    <TextView
            android:text="0 Coins"
            android:layout_width="0dp"
            android:layout_height="40dp" android:id="@+id/shopCoins"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="24sp" android:textAlignment="center"
            android:textStyle="bold" android:textColor="#FFFFFF" android:background="#F44336"/>

    <ListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/listRewards"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shopCoins"
            app:layout_constraintBottom_toTopOf="@id/tasksButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>